extends layout
block content
    h2 Welcome
    a(href="/api/login/google") Login with Google
    p or
    a(href="/api/login/facebook") Login with Facebook
    div.card-body
        div.form-group
            label(for="username") Username
            input(type='text' class='form-control' id='username' name='username' placeholder='Enter username' required='required')
        div.form-group
            label(for="pwd")
            input(type='password' class='form-control' id='password' name='password' placeholder='Enter password' required='required')
        div
        if error
            div.alert.alert-danger #{error}
        button.btn.btn-success.float-right(onclick='login()') Login
        a.btn.btn-info(href='register' role='button') Register